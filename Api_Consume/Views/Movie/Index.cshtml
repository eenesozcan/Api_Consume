@model List<MovieListViewModel>
@{
    Layout = null;
}

<h3>IMDB top 100</h3>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Film Adı</th>
            <th>Yapım Yılı</th>
            <th>Puanı</th>
            <th>Fragman</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.rank</td>
                <td>@item.title</td>
                <td>@item.year</td>
                <td>@item.rating</td>
                <td><a href="#" class="btn btn-dark">Fragman</a></td>
            </tr>
        }
    </table>
</div>